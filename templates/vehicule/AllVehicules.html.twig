{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	- vehicules
{% endblock %}

{% block content %}
	{% for vehicule in vehicules %}
		<div class="flex-wrap d-flex justify-content-center text-center">
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h2 class="card-title">{{vehicule.titre}}</h2>

					{% if vehicule.photo is not null %}
						<img class="card-img-top img-thumbnail" src="{{asset('photosVehicules/' ~ vehicule.photo)}}"/>
					{% endif %}
					<h4>{{vehicule.modele}}</h4>
					<h5>{{vehicule.marque}}</h5>
					<h3>
						<strong>{{vehicule.prixJournalier}}
							€/j
						</strong>
					</h3>
					<p class=" card-text">{{vehicule.description | slice(0,100)}}...</p>
					<a class="btn btn-primary btn-xs btn-defaults text-white" href="{{path("app_vehicule",{id:vehicule.id})}}">Voir plus</a>
					{# <a href="{{path('read-vehicule',{id:vehicule.id})}}" class="btn btn-primary">lire l'vehicule</a> #}
					<h6 class="card-title mb-2 text-muted">Ajouté le :
						{{vehicule.dateEnregistrement | date("d/m/y \à H\\hi")}}</h6>

				</div>
			</div>
		{% endfor %}

	{% endblock %}
