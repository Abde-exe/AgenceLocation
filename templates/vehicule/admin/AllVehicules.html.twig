{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	- vehicules
{% endblock %}

{% block content %}
	<div class="row d-flex justify-content-center text-center container-fluid">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Titre</th>
					<th scope="col">Marque</th>
					<th scope="col">Modele</th>
					<th scope="col">Desc</th>
					<th scope="col">Photo</th>
					<th scope="col">Prix/jour</th>
					<th scope="col">Date</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for vehicule in vehicules %}
					<tr>
						<th scope="row">{{vehicule.id}}</th>
						<td>{{vehicule.titre}}</td>
						<td>{{vehicule.marque}}</td>
						<td>{{vehicule.modele}}</td>
						<td>{{vehicule.description | slice(0,15)}}...</td>
						<td>
							<img class="img-thumbnail" src="{{asset('photosVehicules/' ~ vehicule.photo)}}"/>
						</td>
						<td>{{vehicule.prixJournalier}}</td>
						<td>{{vehicule.dateEnregistrement | date("d/m/y")}}</td>
						<td>
							<div>
								<a href="{{path('app_vehicule',{id:vehicule.id})}}">Voir</a>

								<a href="{{ path('admin_update_vehicule',{id:vehicule.id})}}">
									<i class="fas fa-edit mx-1 text-success"></i>
								</a>
								<a href="{{ path('delete_vehicule',{id:vehicule.id})}}">
									<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('Etes vous sÃ»r de vouloir supprimer ce vehicule?')"></i>
								</a>
							</div>
						</td>

					</tr>
				{% endfor %}

			</tbody>
		</tbody>
	</table>
</div>{% endblock %}
